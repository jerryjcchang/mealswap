<!DOCTYPE html>
<html>
  <head>
    <title>Mealswap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <h1>MealSwap</h1>
      <% if cookies.has_key? "current_user" %>
      <h2>Welcome <%= link_to current_user.first_name, current_user %></h2>
      <%= link_to "Edit Profile", edit_user_path(current_user) %> | <%= link_to "Log Out", logout_path %></p>
    <% else %>
      <p><%= link_to "Log In", login_path %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
