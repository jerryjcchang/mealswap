<h3>New Account</h3>

<%= render partial: "shared/error_list", locals: {new_object: @user} %>

<%= form_for @user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %></br></br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %></br></br>
  <%= f.label :username %>
  <%= f.text_field :username %></br></br>
  <%= f.label "Create a password" %>
  <%= f.password_field :password %></br></br>
  <%= f.label "Please confirm your password" %>
  <%= f.password_field :password_confirmation %></br></br>
  <%= f.label "Please select your company from the list below" %>
  <%= f.collection_select(:company_id, Company.all, :id, :name, prompt: "---") %></br></br>
  <%= f.label "Cooking Experience (1 being Novice, 5 being Expert)" %>
  <%= f.select :experience, (1..5) %></br></br>
  </br>
  <%= f.submit 'Register' %></br>

<% end %>
