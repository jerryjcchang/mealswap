<h2><%= form_for @meal do |f| %></h2>
  <ul>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :calories %>
    <%= f.select :calories, (100..2000).step(100) %>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :prep_time %>
    <%= f.text_field :prep_time %>
    <%= f.label :portion %>
    <%= f.select :portion, (1..4) %>
    <%= f.hidden_field :chef_id, value: current_user.id %>
    <%= f.submit submit_text %>
<% end %>
