<h2><%= form_for @meal do |f| %></h2>
  <ul>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :calories %>
    <%= f.text_field :calories %>
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :prep_time %>
    <%= f.text_field :prep_time %>

    <%= f.submit submit_text %>
<% end %>
